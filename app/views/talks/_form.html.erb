<%= form_for(talks) do |f| %>

<% if talks.errors.any? %>
    <div id="error_explanation">
        <ul>
            <% talks.errors.full_messages.each do |message| %>
            <li><%= message %></li>  
            <% end %>
        </ul>
    </div>
<% end %>



<%= f.label :content, 'task' %>

<%= f.text_field :content %>

<%= f.label :status, 'status' %>

<%= f.text_field :status %>

<%= f.submit '投稿' %>

<% end %>
